package my_lab3;

import java.awt.EventQueue;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JRadioButton;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Font;
import java.awt.Color;


public class Main_lab3 {

	private JFrame frame;
	private JTextField textField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Main_lab3 window = new Main_lab3();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Main_lab3() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.getContentPane().setFont(new Font("Tahoma", Font.PLAIN, 15));
		frame.setBounds(100, 100, 538, 400);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("\u0412\u044B\u0432\u043E\u0434 \u0447\u0438\u0441\u043B\u0430"); //Вывод числа
		lblNewLabel.setFont(new Font("Tahoma", Font.PLAIN, 15));
		lblNewLabel.setBounds(10, 11, 265, 339);
		frame.getContentPane().add(lblNewLabel);
		

		
		JRadioButton rdbtnNewRadioButton = new JRadioButton("While");
		rdbtnNewRadioButton.setFont(new Font("Tahoma", Font.PLAIN, 15));
		rdbtnNewRadioButton.setSelected(true);
		rdbtnNewRadioButton.setBounds(451, 11, 60, 29);
		frame.getContentPane().add(rdbtnNewRadioButton);
		
		JLabel lblNewLabel_1 = new JLabel("\u0412\u0432\u0435\u0434\u0438\u0442\u0435 \u0447\u0438\u0441\u043B\u043E:"); //Введите число
		lblNewLabel_1.setFont(new Font("Tahoma", Font.PLAIN, 20));
		lblNewLabel_1.setBounds(297, 9, 149, 29);
		frame.getContentPane().add(lblNewLabel_1);
		
		textField = new JTextField();
		textField.setBounds(297, 49, 214, 29);
		frame.getContentPane().add(textField);
		textField.setColumns(10);
		
		JButton btnNewButton = new JButton("\u0412\u0432\u043E\u0434"); //Ввод
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				
				int maxN = Integer.parseInt(textField.getText());
				String result = "";
				
		        int i = 0; 
	        	result += ("<html>");
	        	
	        	if (rdbtnNewRadioButton.isSelected()) {
	        		
	        		int n = maxN;
	            	int countString = 1;
	            	int number = n; 
	            	
	            	while (countString <= n) {
	            		i = 0;
	            		while (i < n * 2) {
	            			result += ("&ensp;");
	            			i++;
	            		}	
	            		
	                	number = n;
	                	while (number <= maxN) {
	            			result += (number + "&ensp;");
	                		number++;
	                	}
		            	result += ("<br>");
	                	n--;
	            	}
	            	
	            	
	            	countString = 1;
	            	number = 1;
	            	n = maxN;

	            	while (countString < n) {
	            		i = 0;
	            		while (i < (countString + 1) * 2) {
	            			result += ("&ensp;");
	            			i++;
	            		}
	            		countString++;
	            		
	            		number = countString;
	                	while (number <= maxN) {
	            			result += (number + "&ensp;");
	                		number++;
	                	}
		            	result += ("<br>");
	            	}  

		        	result += ("</html>");
	        	}
	        	
	        	
	        	else {
	        		
	                int n = maxN;
	            	int countString = 1;
	            	int number = n;
	            	
	            	if (n == 0) {
	            	}
	            	else if (n == 1) {
			        	result += ("1");
	            	}
	            	else {
	            		do {
	                		i = 0;
	                		do { 
		            			result += ("&ensp;");
	                			i++;
	                		} while (i < n * 2);
	                		
	                    	number = n;
	                    	do {
		            			result += (number + "&ensp;");
	                    		number++;
	                    	} while (number <= maxN);
			            	result += ("<br>");
	                    	
	                    	n--;
	                    	
	                	} while (countString <= n);
	                	
	                	countString = 1;
	                	number = 1;
	                	n = maxN;

	                	do { 
	                		i = 0;
	                		do { 
		            			result += ("&ensp;");
	                			i++;
	                		} while (i < (countString + 1) * 2);
	                		countString++;
	                		
	                		number = countString;
	                    	do {
		            			result += (number + "&ensp;");
	                    		number++;
	                    	} while (number <= maxN);
			            	result += ("<br>");
	                	} while (countString < n);
	            	}
	        		result += ("</html>");
	        	}

	        	lblNewLabel.setText(result);
			}
		});
		btnNewButton.setFont(new Font("Tahoma", Font.PLAIN, 15));
		btnNewButton.setBounds(357, 93, 89, 23);
		frame.getContentPane().add(btnNewButton);
		
		JLabel lblNewLabel_2 = new JLabel("New label");
		lblNewLabel_2.setBackground(Color.BLACK);
		lblNewLabel_2.setBounds(285, 147, 182, 23);
		frame.getContentPane().add(lblNewLabel_2);
		
	}
}
