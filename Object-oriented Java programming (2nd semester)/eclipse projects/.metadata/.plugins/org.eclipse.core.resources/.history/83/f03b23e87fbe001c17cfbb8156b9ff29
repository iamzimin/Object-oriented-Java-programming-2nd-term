package lab11_new;

public class MyList {
	
	private ListElem head = null;
	
	public void AddToHead(String newValue) {
		ListElem elem = new ListElem();
		elem.value = newValue;
		elem.next = head;
		head = elem;
	}
	
	public void deleteElement(String newValue) {
		
		ListElem listElem = head;
		ListElem oldElem = null;
		while (listElem != null) {
			
			
			if (listElem.value.compareTo(newValue) == 0) {
				
				ListElem nextElem = listElem.next;
				if (oldElem != null) {
					oldElem.next = nextElem;
				}
				else {
					nextElem = nextElem.next;
				}
				
				
			}
			oldElem = listElem;
			
			listElem = listElem.getNext();
		}
	}
	
	public String toString() {
		String str = "";
		ListElem pos = head;
		while (pos !=  null) {
			str += pos.value + " ";
			pos = pos.next;
		}
		return str;
	}
	
	public String displayList() {
		ListElem ListElem = head;
		String output = "";
		
		while (ListElem != null) {
			output += ListElem.getData() + " ";
			ListElem = ListElem.getNext();
		}
		
		return output;
	}
	
	public void reverseList () {
		
		 if (head == null || head.getNext() == null) {
			return;
		} else {
			ListElem p = head.getNext();
			ListElem q = head.getNext().getNext();
			//p.setNext(null);
			ListElem temp = null;
			while (q != null) {
				temp = q.getNext();
				q.setNext(p);
				p = q;
				q = temp;
			}
			if (q == null) {
				head.setNext(p);
				q = null;			
			}
		}		
	}
	
	public boolean isEmpty() {
		return head == null;
	}
	
	public void clear() {
		head = null;
	}
	
}
